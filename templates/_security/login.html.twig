{% extends "_security/base.html.twig" %}

{% block title %}Sign in - {{ parent() }}{% endblock %}

{% block body %}
    <form method="post">
        <img class="mb-4" src="https://external-content.duckduckgo.com/iu/?u=https%3A%2F%2Fcdn.freebiesupply.com%2Flogos%2Flarge%2F2x%2Fsymfony-logo-png-transparent.png&f=1&nofb=1" alt="" width="72" height="72">
        <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        {% if error %}
            <div class="text-center mb-10">
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            </div>
        {% endif %}
        <div class="form-floating">
            <input type="email" class="form-control" id="username" name="email" autocomplete="off" value="{{ last_username }}" placeholder="username" required autofocus>
            <label for="floatingInput">Email address</label>
        </div>
        <div class="form-floating">
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" required autocomplete="off">
            <label for="floatingPassword">Password</label>
        </div>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <button class="w-100 btn btn-lg btn-primary" type="submit">Sign in</button>
        <p class="mt-5 mb-3 text-muted">&copy; 2017â€“2021</p>
    </form>
{% endblock %}
<div class="fv-row mb-7">
    <label class="d-block fw-bold fs-6 mb-5">
        {{ form.vars.label | capitalize }}
        {% if form.vars.required == "required" %}
            <span class="text-danger">*</span>
        {% endif %}
    </label>
    <div class="image-input image-input-outline" data-kt-image-input="true" style="background-image: url({{ asset('assets/media/avatars/blank.png') }})">
        <div class="image-input-wrapper w-125px h-125px" style="background-image: url({{ src is defined ? src : asset('assets/metronic/media/avatars/blank.png') }})"></div>
        <label class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-white shadow" data-kt-image-input-action="change" data-bs-toggle="tooltip" title="Change avatar">
            <i class="bi bi-pencil-fill fs-7"></i>
            {{ form_widget(form, {'attr': {'placeholder': form.vars.label}}) }}
            <input type="hidden" name="avatar_remove" />
        </label>
        <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-white shadow" data-kt-image-input-action="cancel" data-bs-toggle="tooltip" title="Cancel avatar">
                <i class="bi bi-x fs-2"></i>
            </span>
        {% if src is defined %}
            {% if src is not null%}
                <span class="btn btn-icon btn-circle btn-active-color-primary w-25px h-25px bg-white shadow" data-kt-image-input-action="remove" data-bs-toggle="tooltip" title="Remove avatar">
                        <i class="bi bi-x fs-2"></i>
                    </span>
            {% endif %}
        {% endif %}
    </div>
    <div class="fv-plugins-message-container invalid-feedback"></div>
    {% if form.vars.help %}<div class="form-text">{{ form.vars.help }}</div>{% endif %}
    {% if not form.vars.valid %}
        {% for e in form.vars.errors %}
            <span class="form-text text-danger">{{ e.message }}</span>
        {% endfor %}
    {% endif %}
</div>
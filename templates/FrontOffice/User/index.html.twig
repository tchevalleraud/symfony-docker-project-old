{% extends "FrontOffice/base.html.twig" %}

{% block title %}Dashboard - {{ parent() }}{% endblock %}

{% block topbar_left %}
    <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_header_nav'}" class="page-title d-flex align-items-center flex-wrap me-3 mb-5 mb-lg-0">
        <h1 class="d-flex align-items-center text-dark fw-bolder fs-3 my-1">User management</h1>
        <span class="h-20px border-gray-200 border-start mx-4"></span>
        <ul class="breadcrumb breadcrumb-separatorless fw-bold fs-7 my-1">
            {{ breadcrumb(app.request) }}
        </ul>
    </div>
{% endblock %}

{% block body %}
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div class="container">
            <div class="card">
                {{ form_start(forms.search, {'attr': {'class': 'card-header border-0 pt-6'}}) }}
                    <div class="card-title">
                        <div class="d-flex align-items-center position-relative my-1">
                            <span class="svg-icon svg-icon-1 position-absolute ms-6">{{ include('_svg/duotone/General/Search.svg') }}</span>
                            {{ form_widget(forms.search.user, {'attr': {'class': 'form-control form-control-sm form-control-solid w-250px ps-14', 'placeholder': 'Search user'}}) }}
                        </div>
                    </div>
                    <div class="card-toolbar">
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn btn-sm btn-light-primary me-3 py-2 px-3" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                                <span class="svg-icon svg-icon-2">{{ include('_svg/duotone/Text/Filter.svg') }}</span>
                                Filter
                                <span class="badge badge-light fw-bolder px-2 mx-1">{{ search.searchFilter }}</span>
                            </button>
                            <div class="menu menu-sub menu-sub-dropdown w-300px w-md-325px" data-kt-menu="true" style="">
                                <div class="px-7 py-5">
                                    <div class="fs-5 text-dark fw-bolder">Filter Options</div>
                                </div>
                                <div class="separator border-gray-200"></div>
                                <div class="px-7 py-5" data-kt-user-table-filter="form">
                                    <div class="mb-1">
                                        <label class="form-label fs-6 fw-bold">LastName :</label>
                                        {{ form_widget(forms.search.lastname, {'attr': {'class': 'form-control form-control-sm form-control-solid'}}) }}
                                    </div>
                                    <div class="mb-1">
                                        <label class="form-label fs-6 fw-bold">FirstName :</label>
                                        {{ form_widget(forms.search.firstname, {'attr': {'class': 'form-control form-control-sm form-control-solid'}}) }}
                                    </div>

                                    <div class="mb-1">
                                        <label class="form-label fs-6 fw-bold">Sort :</label>
                                        {{ form_widget(forms.search.sort, {'attr': {'class': 'form-select form-select-sm form-select-solid fw-bolder'}}) }}
                                    </div>
                                    <div class="mb-1">
                                        <label class="form-label fs-6 fw-bold">Order :</label>
                                        {{ form_widget(forms.search.order, {'attr': {'class': 'form-select form-select-sm form-select-solid fw-bolder'}}) }}
                                    </div>
                                    <div class="mb-5">
                                        <label class="form-label fs-6 fw-bold">Limit :</label>
                                        {{ form_widget(forms.search.limit, {'attr': {'class': 'form-select form-select-sm form-select-solid fw-bolder'}}) }}
                                    </div>

                                    <div class="d-flex justify-content-end">
                                        <button type="submit" class="btn btn-primary btn-sm fw-bold px-6" data-kt-menu-dismiss="true" data-kt-user-table-filter="filter">Apply</button>
                                    </div>
                                </div>
                            </div>
                            <a href="{{ path('frontoffice.users.new') }}" class="btn btn-sm btn-primary px-3">
                                <span class="svg-icon svg-icon-2">{{ include('_svg/duotone/Navigation/Plus.svg') }}</span>
                                Add User
                            </a>
                        </div>
                    </div>
                {{ form_end(forms.search) }}
                <div class="card-body pt-0">
                    <div class="dataTables_wrapper dt-bootstrap4 no-footer">
                        <div class="table-responsive">
                            <table class="table align-middle table-row-dashed fs-6 gy-5 dataTable no-footer" role="grid">
                                <thead>
                                    <tr class="text-start text-muted fw-bolder fs-7 text-uppercase gs-0" role="row">
                                        <th class="min-w-125px">{{ knp_pagination_sortable(users, 'user', 'u.email') }}</th>
                                        <th class="min-w-125px">{{ knp_pagination_sortable(users, 'two-step', 'u.otp') }}</th>
                                        <th class="text-end min-w-100px">Actions</th>
                                    </tr>
                                </thead>
                                <tbody class="text-gray-600 fw-bold">
                                    {% for user in users %}
                                        <tr>
                                            <td class="d-flex align-items-center py-1">
                                                {% if user.avatar %}
                                                    <div class="symbol symbol-circle symbol-40px overflow-hidden me-3">
                                                        <a href="{{ path('frontoffice.users.show', {'user': user}) }}">
                                                            <div class="symbol-label">
                                                                <img src="{{ user.avatar }}" alt="{{ user.lastname | upper }} {{ user.firstname | capitalize }}" class="w-40" width="40">
                                                            </div>
                                                        </a>
                                                    </div>
                                                {% else %}
                                                    <div class="symbol symbol-circle symbol-40px overflow-hidden me-3">
                                                        <a href="{{ path('frontoffice.users.show', {'user': user}) }}">
                                                            <div class="symbol-label fs-3 bg-light-danger text-danger">{{ user.initial | upper }}</div>
                                                        </a>
                                                    </div>
                                                {% endif %}
                                                <div class="d-flex flex-column">
                                                    <a href="{{ path('frontoffice.users.show', {'user': user}) }}" class="text-gray-800 text-hover-primary mb-1">{{ user.lastname | upper }} {{ user.firstname | capitalize }}</a>
                                                    <span>{{ user.email }}</span>
                                                </div>
                                            </td>
                                            <td class="py-1 text-left">
                                                {% if user.otp %}<div class="badge badge-light-success fw-bolder">Enabled</div>
                                                {% else %}<div class="badge badge-light-danger fw-bolder">Disabled</div>
                                                {% endif %}
                                            </td>
                                            <td class="py-1 text-end">
                                                <a href="#" class="btn btn-light btn-active-light-primary btn-sm" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end" data-kt-menu-flip="top-end">
                                                    Actions
                                                    <span class="svg-icon svg-icon-5 m-0">
                                                        {{ include('_svg/duotone/Navigation/Angle-down.svg') }}
                                                    </span>
                                                </a>
                                                <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-bold fs-7 w-125px py-4" data-kt-menu="true">
                                                    <div class="menu-item px-3">
                                                        <a href="{{ path('frontoffice.users.edit', {'user': user}) }}" class="menu-link px-3">Edit</a>
                                                    </div>
                                                    <div class="menu-item px-3">
                                                        <a href="{{ path('frontoffice.users.delete', {'user': user}) }}" class="menu-link px-3" data-kt-users-table-filter="delete_row">Delete</a>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        <div class="row">
                            <div class="col-sm-12 col-md-5 d-flex align-items-center justify-content-center justify-content-md-start"></div>
                            <div class="col-sm-12 col-md-7 d-flex align-items-center justify-content-center justify-content-md-end">
                                {{ knp_pagination_render(users) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}